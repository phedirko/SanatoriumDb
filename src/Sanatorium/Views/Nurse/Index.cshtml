@model Sanatorium.Models.NurseViewModels.IndexViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<br/>
<h4 class="ui horizontal divider header">
    <i class="write icon"></i>
    Procedures
</h4>
<div class="ui grid">
    <div class="ten wide column">
        <table class="ui celled striped table">
            <thead>
            <tr>
                <th colspan="3">
                    Procedures
                </th>
            </tr>
            </thead>
            <tbody id="procedureTableBody">
            @foreach (var procedure in Model.Procedures)
            {
                <tr>
                    <td class="collapsing">
                        @procedure.Name
                    </td>
                    <td class="right aligned collapsing">@procedure.Price</td>
                    <td>Какие то действия</td>
                </tr>
            }
            </tbody>
        </table>


    </div>
    <div class="six wide column" align="right">

        <form id="addProcedureForm" onsubmit="return false;">
            <h4>Add Procedure</h4>
            <div class="ui left icon input">
                <input type="text" placeholder="Name" name="name" id="name">
                <i class="users icon"></i>
            </div>
            <br/>
            <br/>
            <div class="ui left icon input">
                <input type="number" placeholder="Price" name="price" id="price">
                <i class="users icon"></i>
            </div>
            <br/>
            <br/>
            <button class="ui primary button" id="addProcedureBtn">
                Save
            </button>
        </form>
    </div>
</div>
<h4 class="ui horizontal divider header">
    <i class="users icon"></i>
    Patients
</h4>
<div class="ui grid">
    <div class="sixteen wide column">
        <div class="ui selection dropdown">
            <input type="hidden" name="gender">
            <i class="dropdown icon"></i>
            <div class="default text">Gender</div>
            <div class="menu">
                <div class="item" data-value="male" data-text="Male">
                    <i class="male icon"></i>
                    Male
                </div>
                <div class="item" data-value="female" data-text="Female">
                    <i class="female icon"></i>
                    Female
                </div>
            </div>
        </div>
        <div class="ui icon input">
            <input type="text" placeholder="Search by FullName" id="searchPatientByName">
            <i class="inverted circular search link icon"></i>
        </div>
    </div>
</div>
<div class="ui grid">
    <div class="sixteen wide column">
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Gender</th>
                    <th>Seen by nurse</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="patientTableBody">
                @foreach (var patient in Model.Patients)
            {
                    <tr id="Patient@(patient.Id)">
                        <td>
                            @patient.FullName
                        </td>
                        <td>@patient.Gender</td>
                        @if (patient.SeenByNurse)
                        {
                            <td class="positive" id="patient@(patient.Id)Seen">@patient.SeenByNurse</td>
                        }
                        else
                        {
                            <td class="negative" id="patient@(patient.Id)Seen">@patient.SeenByNurse</td>
                        }

                        <td class="center aligned collapsed">
                            <a class="ui yellow basic button " href="~/Nurse/PatientBook?id=@patient.Book.Id&patientId=@patient.Id">Details</a>                     
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="ui page dimmer" id="procedureAddedDimmer">
    <div class="content">
        <div class="center">
            <h1>Procedure successively added</h1>
        </div>
    </div>
</div>