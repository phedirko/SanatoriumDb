@model Sanatorium.Models.AdminViewModels.ManageAdminsViewModel
<br>
<br>
<br>
<br />
<div class="ui grid">
    <h3>Manage Admins</h3>
</div>
<div class="ui grid">
    <div class="eight wide column">
        <table class="ui celled striped table">
            <thead>
                <tr>
                    <th colspan="2">
                        Admins
                    </th>
                </tr>
            </thead>
            <tbody>
              @foreach (var admins in Model.Admins)
              {

                        <tr>
                  <td>@admins.UserName</td>
                 
                  <td class="collapsing">
@if (admins.UserName != User.Identity.Name)
                {
                      <button class="basic ui orange button fluid removeUserFromRole" user-id="@admins.Id" user-role="ADMIN">remove from role</button>
}
else {
                      <button class="basic ui orange button disabled fluid">You</button>
}
                            </td>
                        </tr>

              }
            </tbody>
        </table>
    </div>
    <div class="eight wide column">
        <table class="ui celled striped table">
            <thead>
                <tr>
                    <th colspan="2">
                        Other Users
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var notAdmins in Model.NotAdmins)
                {
                        <tr>
                            <td>@notAdmins.UserName</td>

                            <td class="collapsing">
                                <button class="basic ui orange button setRoleBtn" user-id="@notAdmins.Id" user-role="ADMIN">Set As Admin</button>
                            </td>
                        </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>